<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KleynGroup.Views.ErrorPage"
             Title="Error">
    <StackLayout x:Name="MasterLayout">
        <StackLayout x:Name="Header" Orientation="Horizontal" VerticalOptions="Start">
            <Image x:Name="Logo" Source="logo.png" Margin=" 5,5,0,10"/>
        </StackLayout>

        <StackLayout x:Name="Interneterror" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Label x:Name="OopsTxt" Text="OOPS!"></Label>
            <Label x:Name="MonkeyTxt" HorizontalOptions="CenterAndExpand" Text="{Binding Joke}" ></Label>
            <Label x:Name="StatusCode" HorizontalOptions="CenterAndExpand" Text="{Binding Error}"></Label>
            <Button x:Name="Backbutton" HorizontalOptions="CenterAndExpand" Clicked="ReturnBack" Text="Return back to dashboard" Margin=" 0,10,20,5"/>
        </StackLayout>

        <StackLayout x:Name="Footer" Orientation="Horizontal" VerticalOptions="EndAndExpand" Margin="0,0,0,-5">
            <Label x:Name="LblCr" Text="Copyright © 2018, Kleyn Group" Margin="95, 0, 0, 0"/>
        </StackLayout>
    </StackLayout>
</ContentPage>